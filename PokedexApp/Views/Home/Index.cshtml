@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Pokedex</h1>
    <p>Click on the pokemons to view info.</p>
    <!-- Search form -->
    <div class="md-form mt-0 col-xs-2">
      <input class="form-control search" type="text" placeholder="Search Pokemon..." aria-label="Search">
    </div>
    <div class="d-flex flex-row mb-3 flex-wrap" id="upper">
    @for (int i = 0; i < @Model.Count; i++)
    {
        
        <a href="@($"Pokemon/{i+1}/")" >
            <div class="d-flex flex-column bd-highlight mb-3" style="border-color: #0b2e13">
                @Html.Raw($" <img src=\"https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{i + 1}.png\" alt=\"{@Model[i].name}\"/> ")
                <p id="@($"Pokemon{i+1}")">@Model[i].name</p>
            </div>
        </a>
    }
    </div>
</div>
<script src="lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $('.form-control.search').on("keyup", function(){
            var poke_search = $(this).val().toLowerCase();
            $("#upper").children().each(function() {
              var stringData = $(this).children().children("p").text();
              console.log("AAA")
              console.log(stringData)
              if(stringData.indexOf(poke_search) == -1){
                  $(this).hide();
              }else{

                  $(this).show();
              }
            })
        })
    })
</script>